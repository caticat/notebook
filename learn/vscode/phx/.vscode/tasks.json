{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "echo",
			"type": "shell",
			"command": "echo Hello"
		},
		{
			"label": "build",
			"type": "shell",
			"command": "ninja",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"dependsOn": [
				"_cmake"
			]
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "rm -rf build",
			"problemMatcher": []
		},
		{
			"label": "_cmake",
			"type": "shell",
			"command": "cmake .. -G Ninja -DCMAKE_C_COMPILER=clang -DCMAKE_CXX_COMPILER=clang++",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"dependsOn": [
				"_makeBuildPath",
				"_restoreCmake"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "_makeBuildPath",
			"type": "shell",
			"command": "mkdir -p build"
		},
		{
			"label": "_restoreCmake",
			"type": "shell",
			"command": "/home/pan/.bin/pan.sh mc",
			"problemMatcher": []
		},
		{
			"label": "buildGate",
			"type": "shell",
			"command": "cmake --build . --target gate.out",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"dependsOn": [
				"_cmake"
			],
			"problemMatcher": []
		},
		{
			"label": "buildWorld",
			"type": "shell",
			"command": "cmake --build . --target world.out",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"dependsOn": [
				"_cmake"
			],
			"problemMatcher": []
		},
		{
			"label": "buildGame",
			"type": "shell",
			"command": "cmake --build . --target phoenix.out",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"dependsOn": [
				"_cmake"
			],
			"problemMatcher": []
		}
	]
}